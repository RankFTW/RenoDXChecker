<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="RenoDXChecker.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:RenoDXChecker.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:BoolToVisibility x:Key="BoolVis" />
            <converters:InvertBoolToVisibility x:Key="InvBoolVis" />
            <converters:StringToVisibility x:Key="StrVis" />
            <converters:StringToBool x:Key="StrBool" />
            <converters:HexColorToBrush x:Key="HexBrush" />
            <converters:GameStatusToInstallVisible x:Key="InstallVis" />
            <converters:GameStatusInstalledVisible x:Key="InstalledVis" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
